<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>br.eng.silas.qpdftools</id>

  <name>Qpdf Tools</name>
  <summary>Tool for managing PDFs</summary>
  <developer_name>Silas Henrique</developer_name>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>Unlicense</project_license>

  <description>
    <p>Qpdf Tools is an Qt interface for Ghostscript and QPDF.</p>
    <p>Qpdf Tools makes possible for normal users to manage their PDFs.</p>
    <p>With Qpdf Tools, you can easily compress, split, merge and even rotate your pdf documents.</p>
  </description>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <url type="homepage">https://github.com/silash35/qpdftools</url>
  <url type="bugtracker">https://github.com/silash35/qpdftools/issues</url>

  <content_rating type="oars-1.0" />
  <launchable type="desktop-id">br.eng.silas.qpdftools.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>https://github.com/silash35/qpdftools/raw/master/resources/screenshots/menu-screen.png?raw=true</image>
      <caption>Menu screen of Qpdf Tools</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/silash35/qpdftools/raw/master/resources/screenshots/merge-screen.png?raw=true</image>
      <caption>Merge PDFs screen of Qpdf Tools</caption>
    </screenshot>
    <screenshot>
      <image>https://github.com/silash35/qpdftools/raw/master/resources/screenshots/compress-screen.png?raw=true</image>
      <caption>Compress PDF screen of Qpdf Tools</caption>
    </screenshot>
  </screenshots>
</component>